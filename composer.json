{
    "name": "algolia/scout-extended",
    "description": "Scout Extended extends Laravel Scout adding algolia-specific features",
    "keywords": ["laravel", "scout", "algolia", "extended", "search", "places", "analytics"],
    "license": "MIT",
    "authors": [
        {
            "name": "Nuno Maduro",
            "email": "enunomaduro@gmail.com"
        },
        {
            "name": "Algolia Team",
            "email": "contact@algolia.com"
        }
    ],
    "require": {
        "php": "^7.1.3",
        "ext-json": "*",
        "algolia/algoliasearch-client-php": "^2.0",
        "illuminate/console": "5.6.*|5.7.*|5.8.*|^6.0",
        "illuminate/contracts": "5.6.*|5.7.*|5.8.*|^6.0",
        "illuminate/database": "5.6.*|5.7.*|5.8.*|^6.0",
        "illuminate/filesystem": "5.6.*|5.7.*|5.8.*|^6.0",
        "illuminate/support": "5.6.*|5.7.*|5.8.*|^6.0",
        "laravel/scout": "^6.1.1|^7.0",
        "riimu/kit-phpencoder": "^2.3"
    },
    "suggest": {
        "ext-dom": "Required to use the HTML Splitter."
    },
    "require-dev": {
        "fzaninotto/faker": "^1.8",
        "mockery/mockery": "^1.1",
        "nunomaduro/larastan": "^0.4",
        "orchestra/testbench": "^3.0",
        "phpstan/phpstan": "^0.11",
        "phpunit/phpunit": "^7.0|^8.0"
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/",
            "App\\": "tests/laravel/app"
        },
        "files": [
            "vendor/mockery/mockery/library/helpers.php"
        ]
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "autoload": {
        "psr-4": {
            "Algolia\\ScoutExtended\\": "src/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Algolia\\ScoutExtended\\ScoutExtendedServiceProvider"
            ]
        }
    },
    "config": {
        "sort-packages": true,
        "preferred-install": "dist"
    },
    "scripts": {
        "phpstan:test": "phpstan analyse --ansi",
        "phpunit:test": "phpunit --colors=always",
        "test": [
            "@phpstan:test",
            "@phpunit:test"
        ]
    }
}
